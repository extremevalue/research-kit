{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://research-system/schemas/data-source.schema.json",
  "title": "Data Source",
  "description": "Schema for data source registry entries",
  "type": "object",
  "required": ["id", "name", "type", "availability"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_]+$",
      "description": "Unique identifier (e.g., mcclellan_oscillator, spy_prices)"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name"
    },
    "type": {
      "type": "string",
      "enum": ["price_data", "breadth_indicator", "fundamental", "alternative", "reference", "event_data"],
      "description": "Type of data"
    },
    "availability": {
      "type": "object",
      "required": ["qc_native"],
      "properties": {
        "qc_native": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "properties": {
                "available": { "type": "boolean" },
                "symbols": { "type": "array", "items": { "type": "string" } },
                "resolution": { "type": "array", "items": { "type": "string" } },
                "coverage": { "type": "string" }
              }
            }
          ]
        },
        "qc_object_store": {
          "type": "object",
          "properties": {
            "available": { "type": "boolean" },
            "key": { "type": "string" },
            "uploaded_at": { "type": "string", "format": "date-time" }
          }
        },
        "internal": {
          "type": "object",
          "properties": {
            "available": { "type": "boolean" },
            "path": { "type": "string" },
            "tier": {
              "type": "string",
              "enum": ["purchased", "curated", "experimental"]
            }
          }
        }
      }
    },
    "coverage": {
      "type": "object",
      "properties": {
        "start_date": { "type": "string", "format": "date" },
        "end_date": { "type": "string", "format": "date" },
        "frequency": {
          "type": "string",
          "enum": ["tick", "second", "minute", "hour", "daily", "weekly", "monthly"]
        }
      }
    },
    "columns": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Column names in order"
    },
    "column_indices": {
      "type": "object",
      "additionalProperties": { "type": "integer" },
      "description": "Map of column name to index for safe access"
    },
    "usage_notes": {
      "type": "string",
      "description": "Important notes about using this data (e.g., T-1 for lookahead)"
    },
    "validation_rules": {
      "type": "object",
      "properties": {
        "expected_range": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 2,
          "maxItems": 2
        },
        "typical_values": { "type": "string" },
        "null_handling": { "type": "string" }
      }
    },
    "source": {
      "type": "string",
      "description": "Where this data came from"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    }
  }
}
