{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://research-system/schemas/catalog-entry.schema.json",
  "title": "Catalog Entry",
  "description": "Schema for catalog entries (indicators, strategies, ideas, etc.)",
  "type": "object",
  "required": ["id", "name", "type", "status", "created_at", "source"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z]+-[0-9]{3}$",
      "description": "Unique identifier (e.g., IND-001, STRAT-042)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable name"
    },
    "type": {
      "type": "string",
      "enum": ["indicator", "strategy", "idea", "learning", "tool", "data"],
      "description": "Entry type"
    },
    "status": {
      "type": "string",
      "enum": ["UNTESTED", "IN_PROGRESS", "VALIDATED", "CONDITIONAL", "INVALIDATED", "BLOCKED"],
      "description": "Validation status"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "source": {
      "type": "object",
      "required": ["files", "ingested_at"],
      "additionalProperties": false,
      "properties": {
        "files": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Paths to source files in archive"
        },
        "ingested_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the source was ingested"
        },
        "origin": {
          "type": "string",
          "description": "Original source (e.g., paper, blog, code)"
        }
      }
    },
    "summary": {
      "type": "string",
      "maxLength": 500,
      "description": "One-line description"
    },
    "hypothesis": {
      "type": "string",
      "description": "Testable hypothesis about what this does"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Categorization tags"
    },
    "data_requirements": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs from data registry needed for validation"
    },
    "validation_ref": {
      "type": "string",
      "description": "Path to validation folder (e.g., validations/IND-002/)"
    },
    "related_entries": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs of related catalog entries"
    }
  }
}
