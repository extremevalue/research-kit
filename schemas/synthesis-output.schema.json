{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://research-system/schemas/synthesis-output.schema.json",
  "title": "Synthesis Output",
  "description": "Schema for synthesized multi-persona analysis",
  "type": "object",
  "required": ["component_id", "timestamp", "persona_inputs", "consensus", "dissent", "recommendation"],
  "additionalProperties": false,
  "properties": {
    "component_id": {
      "type": "string",
      "pattern": "^[A-Z]+-[0-9]{3}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "persona_inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "persona": { "type": "string" },
          "verdict": { "type": "string" },
          "confidence": { "type": "number" }
        }
      },
      "description": "Summary of each persona's input"
    },
    "consensus": {
      "type": "object",
      "required": ["summary", "agreed_strengths", "agreed_concerns"],
      "properties": {
        "summary": {
          "type": "string",
          "description": "What all personas generally agree on"
        },
        "agreed_strengths": {
          "type": "array",
          "items": { "type": "string" }
        },
        "agreed_concerns": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "dissent": {
      "type": "object",
      "properties": {
        "contrarian_challenges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "challenge": { "type": "string" },
              "target_claim": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["critical", "significant", "minor"]
              }
            }
          }
        },
        "unresolved_disagreements": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "topic": { "type": "string" },
              "positions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "persona": { "type": "string" },
                    "position": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "recommendation": {
      "type": "object",
      "required": ["action", "rationale"],
      "properties": {
        "action": {
          "type": "string",
          "enum": ["PROCEED_TO_OOS", "INVESTIGATE_FURTHER", "COMBINE_WITH", "REJECT", "CONDITIONAL_ACCEPT"],
          "description": "Recommended next action"
        },
        "rationale": {
          "type": "string",
          "description": "Why this action is recommended"
        },
        "conditions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Conditions for conditional recommendations"
        },
        "suggested_combinations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "component": { "type": "string" },
              "rationale": { "type": "string" },
              "priority": { "type": "integer" }
            }
          }
        }
      }
    },
    "risk_assessment": {
      "type": "object",
      "properties": {
        "regime_dependency": {
          "type": "string",
          "enum": ["none", "low", "moderate", "high"],
          "description": "How dependent on market regime"
        },
        "decay_risk": {
          "type": "string",
          "enum": ["low", "moderate", "high"],
          "description": "Risk of edge decay over time"
        },
        "data_risk": {
          "type": "string",
          "enum": ["low", "moderate", "high"],
          "description": "Risk from data quality issues"
        },
        "capacity_estimate": {
          "type": "string",
          "description": "Estimated capacity before market impact"
        }
      }
    },
    "next_steps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Concrete next steps"
    }
  }
}
